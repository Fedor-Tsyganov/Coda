<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fedortsyganov.iptest.RadioMainPageActivity">
  <FrameLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backimg"
        android:src="@drawable/radio_mainpage_background"
        android:scaleType="centerCrop"
        />
      <Button
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:text=""
          android:id="@+id/buttonMenu"
          android:background="@drawable/icon_radio_menu_small"
          android:layout_margin="10dp"
          />
      <Button
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:text=""
          android:id="@+id/buttonSearch"
          android:background="@drawable/search_icon_small"
          android:layout_gravity="top|end"
          android:layout_margin="15dp"/>
      <Button
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:text=""
          android:id="@+id/buttonAddPlaylist"
          android:background="@drawable/icon_add_playlist_small"
          android:layout_gravity="top|end"
          android:layout_margin="10dp"
          android:visibility="gone"/>

      <EditText
          android:id="@+id/searchET"
          android:layout_marginLeft="70dp"
          android:paddingLeft="10dp"
          android:textColorHint="@color/grey_light"
          android:hint="@string/fragment_search"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:inputType="textNoSuggestions"
          android:textColor="@color/white"
          android:background="@android:color/transparent"
          android:visibility="gone"/>
      <RelativeLayout
          android:id="@+id/container"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </RelativeLayout>
      <TextView
          android:id="@+id/tvActionBarInfo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Coda"
          android:textSize="30dp"
          android:textColor="@color/white"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="70dp"
          android:maxLines="1"
          android:maxLength="15"
          android:ellipsize="end"/>
      <FrameLayout
          android:visibility="gone"
          android:id="@+id/layoutPlayingStation"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_gravity="bottom"
          android:background="@color/black_transparent"
          >
          <ImageView
              android:id="@+id/ivPlayingStation"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:background="@drawable/notification_large_icon_test_two"/>
          <me.grantland.widget.AutofitTextView
              android:singleLine="true"
              android:id="@+id/tvPlayingStationName"
              android:layout_marginLeft="70dp"
              android:layout_marginTop="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textSize="18sp"
              autofit:minTextSize="14sp"
              android:paddingRight="50dp"
              android:text=""/>

          <TextView
              android:id="@+id/tvPlayingStationCountry"
              android:layout_marginLeft="70dp"
              android:layout_marginTop="35dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white_dark"
              android:textSize="14sp"
              android:text=""/>

          <ImageView
              android:layout_margin="10dp"
              android:layout_gravity="right"
              android:id="@+id/ivPlayingStationControls"
              android:layout_width="40dp"
              android:layout_height="40dp"
              />
      </FrameLayout>
  </FrameLayout>

    <fragment android:id="@+id/navigation_drawer"
          android:layout_width="@dimen/navigation_drawer_width"
          android:layout_height="match_parent"
          android:layout_gravity="start"
          android:name="com.fedortsyganov.iptest.RadioNavigationDrawer"
          tools:layout="@layout/fragment_navigation_drawer" />

 </android.support.v4.widget.DrawerLayout>