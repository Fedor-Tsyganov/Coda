<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/radio_mainpage_background"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonStations"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_radio_stations"
        android:text=""
        />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/icon_radio_back_small"
        android:text=""
        />
    <Button
        android:id="@+id/buttonAlarmClock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_margin="10dp"
        android:background="@drawable/icon_alarm_clock_small"
        android:text=""
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        />

    <ToggleButton
        android:id="@+id/buttonPlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/play_stop"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        >
    </ToggleButton>

    <Button
        android:id="@+id/buttonPreviousStation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/last_song_small"
        android:text=""
        />

    <Button
        android:id="@+id/buttonNextStation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/next_song_small"
        android:text=""
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonToChat"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/icon_public_chat4"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="@color/white"
            />
        <ImageView
            android:id="@+id/ivDividerRight"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="115dp"
            />
        <ImageView
            android:id="@+id/ivDividerLeft"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="185dp"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

        <TextView
            android:id="@+id/tvRName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="6dp"
            android:text="@string/station_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_light"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvRadioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp"
            android:layout_marginLeft="6dp"
            android:text="@string/station_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvRCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:text="@string/station_country"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_light"
            android:textStyle="italic"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tvRadioCountry"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_country"
            android:textSize="18sp"
            autofit:minTextSize="8sp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_toLeftOf="@+id/ivDividerRight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="6dp"/>

        <me.grantland.widget.AutofitTextView
            android:singleLine="true"
            android:id="@+id/tvRadioGanre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/ivDividerLeft"
            android:text="@string/station_genre"
            android:textSize="18sp"
            autofit:minTextSize="8sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/tvRGanre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="15dp"
            android:text="@string/station_genre"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_light"
            android:textStyle="italic"/>
    </RelativeLayout>


</FrameLayout>
